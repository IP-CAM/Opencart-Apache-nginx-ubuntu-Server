    - name: 'Create Folder Modx'
      file: 
        path: /var/www/html/opencart
        state: directory

    - name: 'Modx Download Package'
      get_url:
        timeout: 300 
        url: https://github.com/opencart/opencart/releases/download/4.0.1.1/opencart-4.0.1.1.zip 
        dest: /usr/src/opencart-4.0.1.1.zip
      register: output

    - name: 'Extracting package'
      when: output.changed == true
      unarchive:
        src: /usr/src/opencart-4.0.1.1.zip
        dest: /usr/src/
        remote_src: yes

    - name: 'Move unzip catalog Modx in root directory'
      shell: mv /usr/src/upload/* /var/www/html/opencart

    - name: 'Change the ownership of Opencart directory to the www-data user'
      file:
        path: /var/www/html/opencart
        state: directory
        recurse: yes
        owner: www-data
        group: www-data
